{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <main class="mainFormulaireLogin">
        <section class="pageFormulaireLogin">
            <form class="formulaireLogin" method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                <div class="titreFormLogin">
                    <h2 class="titreFormLoginActive">Connexion</h2>
                    <a class="titreFormLoginInscription" href="{{ path('app_user_new') }}" ><h2>Inscription</h2></a>
                </div>
                <div class="paragrapheFormulaire">
                    <h3 class="titreParagrapheForm">Déjà <span class="titreParagrapheForm-gras">client ?</span></h3>
                    <p>Connectez-vous pour retrouver toutes vos commandes, vos Wonderbox et la liste de vos articles favoris !</p>
                    <h4 class="sousTitreParagrapheForm">Connectez-vous avec votre adresse e-mail</h4>
                </div>
                <div class="contenuForm">
                    <label for="username">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                    <label for="password">Mot de passe</label>
                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                    #}

                    <button class="formulaireLoginBtn" type="submit">
                        Me connecter
                    </button>


                </div>

            </form>
        </section>
    </main>
{% endblock %}
