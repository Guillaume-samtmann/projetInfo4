{% extends 'base.html.twig' %}

{% block title %}Panier index{% endblock %}

{% block body %}
    <main>
        <h1>Produits se trouvant dans un panier</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Utilisateur</th>
               
            </tr>
            </thead>
            <tbody>
            {% for panier in paniers %}
                <tr>
                    <td>{{ panier.id }}</td>
                    <td>{{ panier.nom }}</td>
                    <td>{% if panier.utilisateur %}
                        <p>{{ panier.utilisateur.nom }}</p>
                    {% else %}
                        <p>Utilisateur introuvable</p>
                    {% endif %}</td>

                    <td>
                        <a href="{{ path('app_panier_show', {'id': panier.id}) }}">show</a>
                        <!--<a href="{{ path('app_panier_edit', {'id': panier.id}) }}">edit</a>-->
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun panier n'est en cours</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <!--<a href="{{ path('app_panier_new') }}">Create new</a>-->
    </main>
{% endblock %}
