{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <main>
        <section class="lePanierGeneral">

            <section class="panier">
                <h2>Panier</h2>

                {% for panier in paniers %}
                    {% for produit in paniers %}
                        <section class="unProduitPanier">
                            <div class="panierEnTete">
                                <img src="{{ produit.photo }}" alt="img-produit">
                                <div class="panierEnTete-contenu">
                                    <h3>{{ produit.nom }}</h3>
                                    <p>Échange & prolongation gratuits et illimités</p>
                                </div>
                            </div>
                            <hr class="panierSeparation">
                            <p class="panierPrix">{{ produit.prix }}</p>
                        </section>
                    {% endfor %}
                {% endfor %}
            </section>


        </section>
        <a href="{{ path('app_panier_index') }}">back to list</a>
    </main>


{% endblock %}
