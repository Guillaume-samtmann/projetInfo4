{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <main>
        <h1>Produits</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img src="{{ produit.photo }}"></td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}€</td>
            </tr>
            {% if produit.ville is not null %}
                <tr>
                    <th>Ville</th>
                    <td>{{ produit.ville.nom }}</td>
                </tr>
            {% endif %}
            {% if produit.motsCles is not empty %}
                <tr>
                    <th>Mots clés</th>
                    <td>
                        <ul>
                            {% for motCle in produit.motsCles %}
                                <li>{{ motCle.nom }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                </tr>
            {% endif %}

            </tbody>
        </table>

        <a href="{{ path('app_produits_index') }}">back to list</a>

        <a href="{{ path('app_produits_edit', {'id': produit.id}) }}">edit</a>

        {{ include('produits/_delete_form.html.twig') }}

    </main>

{% endblock %}
