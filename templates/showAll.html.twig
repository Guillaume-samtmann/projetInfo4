{% extends 'base.html.twig' %}
{% block body %}
    <main>
        <section class="filtreProduit">
            <div class="categoriesFiltre">Catégories</div>
            <div class="linkCategorie">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-x-octagon" id="closeWindowCat" viewBox="0 0 16 16">
                    <path d="M4.54.146A.5.5 0 0 1 4.893 0h6.214a.5.5 0 0 1 .353.146l4.394 4.394a.5.5 0 0 1 .146.353v6.214a.5.5 0 0 1-.146.353l-4.394 4.394a.5.5 0 0 1-.353.146H4.893a.5.5 0 0 1-.353-.146L.146 11.46A.5.5 0 0 1 0 11.107V4.893a.5.5 0 0 1 .146-.353zM5.1 1 1 5.1v5.8L5.1 15h5.8l4.1-4.1V5.1L10.9 1z"/>
                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"/>
                </svg>
                <ul>
                    {% for mot_cle in mot_cles%}
                        <li class="listLienFiltreCat"><a href="{{ path('produit_filtre', {'motCle': mot_cle.nom }) }}">Destination {{ mot_cle.nom }}</a></li>
                    {% endfor %}
                </ul>

            </div>
            <div class="categoriesFiltreRegion">Région</div>
            <div class="linkCategorieRegion">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-x-octagon" id="closeWindowCatRegion" viewBox="0 0 16 16">
                    <path d="M4.54.146A.5.5 0 0 1 4.893 0h6.214a.5.5 0 0 1 .353.146l4.394 4.394a.5.5 0 0 1 .146.353v6.214a.5.5 0 0 1-.146.353l-4.394 4.394a.5.5 0 0 1-.353.146H4.893a.5.5 0 0 1-.353-.146L.146 11.46A.5.5 0 0 1 0 11.107V4.893a.5.5 0 0 1 .146-.353zM5.1 1 1 5.1v5.8L5.1 15h5.8l4.1-4.1V5.1L10.9 1z"/>
                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"/>
                </svg>
                <ul>
                    {% for region in regions%}
                        <li class="listLienFiltreCat"><a href="{{ path('produit_filtreRegion', {'region': region.nom }) }}">{{ region.nom }}</a></li>
                    {% endfor %}
                </ul>

            </div>
        </section>

        <section class="lesProduits">
            {% for produit in produits %}
                <div class="card">
                    <a href="{{ path('produits_showOne', {'id': produit.id}) }}">
                        <div>
                            <img class="img_cardProduit" src="{{ produit.photo }}" alt="img destination">
                        </div>
                        <div>
                            <h2 class="titreProduit">{{ produit.nom }}</h2>
                            <p class="prixProduit">{{ produit.prix }}€</p>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </section>
    </main>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            let categoriesFiltre = document.querySelector(".categoriesFiltre");
            let linkCategorie = document.querySelector(".linkCategorie");
            let closeWindowCat = document.querySelector("#closeWindowCat");

            categoriesFiltre.addEventListener("click", function () {
                linkCategorie.style.display = "flex";
            });

            closeWindowCat.addEventListener("click", function () {
                linkCategorie.style.display = "none";
            });
        });
        document.addEventListener("DOMContentLoaded", function() {
            let categoriesFiltreRegion = document.querySelector(".categoriesFiltreRegion");
            let linkCategorieRegion = document.querySelector(".linkCategorieRegion");
            let closeWindowCatRegion = document.querySelector("#closeWindowCatRegion");

            categoriesFiltreRegion.addEventListener("click", function () {
                linkCategorieRegion.style.display = "flex";
            });

            closeWindowCatRegion.addEventListener("click", function () {
                linkCategorieRegion.style.display = "none";
            });
        });
    </script>
{% endblock %}

